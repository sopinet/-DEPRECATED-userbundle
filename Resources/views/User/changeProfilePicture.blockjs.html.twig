{% if app.user.profilepicturefile is null %}
    {% set files = {} %}
{% else %}
    {% set files = {'0': app.user.profilepicturefile } %}
{% endif %}

{% include 'SopinetUploadMagicBundle:Upload:simple_blockjs.html.twig'
        with {
        'name': 'userprofilepicture',
        'type': 'gallery',
        'files': files,
        'limit': 1,
        'entity': 'Sopinet_UserBundle_ProfilePictureFile',
        'preview': true
}
%}
